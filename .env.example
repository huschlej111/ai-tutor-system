# Environment Configuration Template
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=development

# AWS Configuration
AWS_ACCOUNT_ID=123456789012
AWS_REGION=us-east-1

# Database Configuration (for local development)
AURORA_ENDPOINT=localhost
AURORA_PORT=5432
AURORA_DATABASE=tutor_system
AURORA_USERNAME=postgres
AURORA_PASSWORD=password

# Secrets Manager (for production)
DB_SECRET_NAME=tutor-system/db-credentials
JWT_SECRET_NAME=tutor-system/jwt-secret

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ML Model Configuration
MODEL_PATH=/opt/final_similarity_model
SIMILARITY_THRESHOLD=0.7
MODEL_BATCH_SIZE=32

# API Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
RATE_LIMIT=1000
MAX_REQUEST_SIZE=1048576

# Development flags
DEBUG=true
LOG_LEVEL=INFO

# Email Configuration (for Cognito)
# Production: Use SES with verified domain
# Development: Use MailHog for local testing
EMAIL_FROM=noreply@yourdomain.com
EMAIL_REPLY_TO=noreply@yourdomain.com

# LocalStack Email Testing (development only)
MAILHOG_SMTP_HOST=localhost
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025